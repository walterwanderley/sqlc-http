openapi: 3.0.3
info:
  description: {{ .GoModule}} Services
  title: {{ .GoModule}}
  version: 0.0.1
  contact:
    name: sqlc-http
    url: https://github.com/walterwanderley/sqlc-http
tags:
  {{range .Packages}}- {{.Package}}
  {{end}}
paths:
  {{range .Packages}}{{$pkg := .Package}}{{range $key, $val := . | GroupByPath}}{{$key}}:
    {{range $val}}{{. | HttpMethod | LowerCase}}:
      tags:
        - {{$pkg}}
      summary: {{.Name}}
      {{range . | ApiParameters}}{{.}}
      {{end}}
      responses:
        "200":
          description: OK
          {{range . | ApiResponse}}{{.}}
          {{end}}
        "400":    
          description: Bad request
        "500":
          description: Internal server error    
    {{end}}
  {{end}}{{end}}
components:
  schemas:  
